@{
    var FullName = Context.Session.GetString("FullName");
    var AccountId = Context.Session.GetInt32("AccountId");
    var Role = Context.Session.GetInt32("AccountRole");
    var AvatarUrl = Context.Session.GetString("AvatarUrl");
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Begulas Express</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">


    <link rel="icon" type="image/png" href="~/assets/images/icon.png" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Client/home.css" asp-append-version="true" />

</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                    <i class="bi bi-truck me-2"></i>Begulas Express
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("FindOrder", "Order")">Tra cứu đơn hàng</a>
                        </li>
                        
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (AccountId > 0)
                        {
                            <li class="nav-item d-flex align-items-center me-3">
                                <a style="text-decoration:none" class="nav-link" href="@Url.Action("GetAllPayment", "Payment")">
                                    <i class="bi bi-wallet2 text-white fs-5 me-1"></i>
                                    <span class="text-white fw-bold" id="total_money_in_wallet"></span>
                                </a>
                            </li>
                            
                            @* <li class="nav-item d-flex align-items-center me-3">
                                <a class="nav-link" href="@Url.Action("Withdrawal", "Payment")">Rút tiền</a>
                            </li> *@
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @if (!string.IsNullOrEmpty(AvatarUrl))
                                    {
                                        <img src="@AvatarUrl" alt="Avatar" class="rounded-circle me-2" width="30" height="30" />
                                    }
                                    else
                                    {
                                        <i class="bi bi-person-circle fs-4 text-white me-2"></i>
                                    }
                                    <span>@FullName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 rounded-2 py-1 bg-primary-subtle text-dark" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center small py-2" href="@Url.Action("Index", "AccountDetails")">
                                            <i class="bi bi-person-circle me-2 text-primary"></i>
                                            Cá nhân
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider my-1" /></li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center small py-2 text-danger fw-semibold" href="@Url.Action("Logout", "Account")">
                                            <i class="bi bi-box-arrow-right me-2"></i>
                                            Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light me-2" href="@Url.Action("Login", "Account")">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-warning" href="@Url.Action("Register", "Account")">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main -->
    <main class="container-fluid px-0">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mx-3 mt-3" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mx-3 mt-3" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-5 mt-5">
        <div class="container">
            <div class="row text-center text-md-start">
                <!-- Cột 1 -->
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold"><i class="bi bi-truck me-2"></i>Begulas Express</h5>
                    <p>Giải pháp vận chuyển quốc tế nhanh chóng và an toàn</p>
                </div>

                <!-- Cột 2 -->
                <div class="col-md-4 mb-4">
                    <h6 class="fw-bold">Liên kết nhanh</h6>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Index", "Home")" class="text-white-50">Trang chủ</a></li>

                        <li><a href="@Url.Action("FindOrder", "Order")" class="text-white-50">Tra cứu đơn hàng</a></li>
                    </ul>
                </div>

                <!-- Cột 3 -->
                <div class="col-md-4 mb-4">
                    <h6 class="fw-bold">Thông tin liên hệ</h6>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-telephone me-2"></i>+84 986 851 160 (Zalo)</li>
                        <li><i class="bi bi-envelope me-2"></i>lynhatanhwork@gmail.com</li>
                        <li><i class="bi bi-geo-alt me-2"></i>S106 - KĐT Vinhomes Ocean Park1 - Gia Lâm - Hà Nội</li>
                    </ul>
                </div>
            </div>

            <hr class="my-4">
            <div class="text-center">
                <p>&copy; 2025 Begulas Express. Tất cả các quyền được bảo lưu.</p>
            </div>
        </div>
    </footer>
    <div id="toast-container" style="position: fixed; top: 20px; left: 50%; transform: translateX(-50%); z-index: 1055;">
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
