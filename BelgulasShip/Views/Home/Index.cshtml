    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="hero-section text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Vận chuyển quốc tế nhanh chóng & an toàn</h1>
                <p class="lead mb-4">
                    Begulas Express giúp bạn gửi hàng đi khắp thế giới với dịch vụ chuyên nghiệp,
                    chi phí minh bạch và hỗ trợ tận tình.
                </p>
                @* <div class="d-flex flex-column flex-sm-row gap-3">
                    <a href="@Url.Action("Create", "Transaction")" class="btn btn-light btn-lg">
                        <i class="fas fa-plus-circle me-2"></i>Tạo giao dịch
                    </a>
                    <a href="@Url.Action("SearchTransaction", "Transaction")" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-key me-2"></i>Tra cứu giao dịch
                    </a>
                </div> *@
            </div>
            <div class="col-lg-6 text-center">
                <i class="bi bi-truck" style="font-size:12rem; opacity:0.9;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <i class="bi bi-shield-check text-primary mb-3" style="font-size: 3rem;"></i>
                <h4>An toàn tuyệt đối</h4>
                <p class="text-muted">Hàng hóa được bảo vệ với quy trình nghiêm ngặt và bảo hiểm đầy đủ.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="bi bi-lightning-charge text-primary mb-3" style="font-size: 3rem;"></i>
                <h4>Giao hàng nhanh chóng</h4>
                <p class="text-muted">Thời gian vận chuyển được tối ưu, cập nhật trạng thái theo thời gian thực.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="bi bi-cash-coin text-primary mb-3" style="font-size: 3rem;"></i>
                <h4>Chi phí hợp lý</h4>
                <p class="text-muted">Giá cước minh bạch, cạnh tranh và phù hợp với mọi nhu cầu vận chuyển.</p>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Quy trình gửi hàng</h2>
            <p class="lead text-muted">4 bước đơn giản – An toàn & tiện lợi</p>
        </div>

        <div class="row">
            <div class="col-lg-3 col-md-6 text-center mb-4">
                <div class="step-number mx-auto mb-3">1</div>
                <h5>Tạo đơn hàng</h5>
                <p class="text-muted">Khách hàng nhập thông tin hàng hóa và địa chỉ nhận.</p>
            </div>
            <div class="col-lg-3 col-md-6 text-center mb-4">
                <div class="step-number mx-auto mb-3">2</div>
                <h5>Đóng gói & ký gửi</h5>
                <p class="text-muted">Nhân viên đến lấy hàng hoặc khách gửi tại điểm tiếp nhận.</p>
            </div>
            <div class="col-lg-3 col-md-6 text-center mb-4">
                <div class="step-number mx-auto mb-3">3</div>
                <h5>Vận chuyển quốc tế</h5>
                <p class="text-muted">Hàng hóa được vận chuyển nhanh chóng qua đường bay quốc tế.</p>
            </div>
            <div class="col-lg-3 col-md-6 text-center mb-4">
                <div class="step-number mx-auto mb-3">4</div>
                <h5>Giao tận tay</h5>
                <p class="text-muted">Begulas Express giao tận nơi và thông báo khi hoàn tất.</p>
            </div>
        </div>
    </div>
</section>

