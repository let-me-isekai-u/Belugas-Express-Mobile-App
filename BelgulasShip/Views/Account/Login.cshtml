@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập - Fat Fat</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/assets/images/icon.png" />
    <style>
        body {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            min-height: 100vh;
            overflow: hidden;
            margin: 0;
            padding: 0;
            animation: float 8s ease-in-out infinite;
            font-family: 'Segoe UI', sans-serif;
        }

        @@keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }

            100% {
                transform: translateY(0px);
            }
        }


        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            background: white;
            padding: 2rem;
            max-width: 420px;
            width: 100%;
            position: relative;
            z-index: 1;
        }

        .form-control {
            border-radius: 0.5rem;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.25rem rgba(42, 82, 152, 0.25);
            }

        .btn-primary {
            background-color: #2a5298;
            border: none;
        }

            .btn-primary:hover {
                background-color: #1e3c72;
            }

        .avatar-icon {
            font-size: 3rem;
            color: #2a5298;
        }

        .close-btn-global {
            position: absolute;
            top: 20px;
            right: 30px;
            font-size: 1.8rem;
            color: white;
            z-index: 10;
            text-decoration: none;
        }

            .close-btn-global:hover {
                color: #ddd;
            }

        .password-group .form-control {
            border-top-left-radius: 0.5rem;
            border-bottom-left-radius: 0.5rem;
        }

        .password-group .input-group-text {
            border-top-right-radius: 0.5rem;
            border-bottom-right-radius: 0.5rem;
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }

    </style>
</head>
<body>
    <!-- Dấu X ngoài form, màu trắng -->
    <a href="@Url.Action("Index", "Home")" class="close-btn-global" title="Quay lại Trang chủ">
        <i class="bi bi-x-lg"></i>
    </a>

    <div class="login-container">
        <div class="card">
            <div class="text-center mb-4">
                <i class="bi bi-shield-lock-fill avatar-icon"></i>
                <h4 class="mt-2">Đăng nhập hệ thống</h4>
                <p class="text-muted small">Chào mừng bạn đến với Begulas Express</p>
            </div>

            <form id="loginForm">
                <div class="mb-3">
                    <label for="email" class="form-label">Số điện thoại</label>
                    <input type="number" name="Email" class="form-control" id="email" required placeholder="Nhập SDT" />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Mật khẩu</label>
                    <div class="input-group password-group">
                        <input type="password" name="PassWord" class="form-control border-end-0" id="password" required placeholder="••••••••" />
                        <span class="input-group-text bg-white border-start-0" id="togglePassword" style="cursor: pointer;">
                            <i class="bi bi-eye" id="eyeIcon"></i>
                        </span>
                    </div>
                </div>


                <div class="mb-3">
                    <a href="/Account/ForgotPassword" class="text-decoration-none">Quên mật khẩu?</a>
                </div>


                <p class="text-danger" id="loginError"></p>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                    </button>
                </div>
            </form>


            <div class="text-center mt-4">
                <small>Bạn chưa có tài khoản? <a href="@Url.Action("Register", "Account")" class="text-decoration-none">Đăng ký ngay</a></small>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</body>


<script>
    $('#loginForm').on('submit', function (e) {
        e.preventDefault();

        $.ajax({
            type: 'POST',
            url: '/Account/Login',
            data: $(this).serialize(),
            success: function (res) {
                if (res.success) {
                    console.log("ehe");
                    window.location.href = res.redirectUrl;
                } else {
                console.log("loi");
                    $('#loginError').hide().text(res.message).fadeIn();
                }
            },
            error: function () {
                $('#loginError').text("Lỗi kết nối máy chủ.").fadeIn();
            }
        });
    });

    document.getElementById('togglePassword').addEventListener('click', function () {
        const passwordInput = document.getElementById('password');
        const eyeIcon = document.getElementById('eyeIcon');
        const isPassword = passwordInput.type === 'password';

        passwordInput.type = isPassword ? 'text' : 'password';
        eyeIcon.classList.toggle('bi-eye');
        eyeIcon.classList.toggle('bi-eye-slash');
    });
</script>
</html>

